<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcode_scanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

        <TextView
            android:id="@+id/tv_qr_scan_activity_upper_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:textSize="26dp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:text="아래 영역에 QR코드를 맞춰주세요."
            />

        <ImageView
            android:id="@+id/iv_qr_scan_activity_scan_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="62dp"
            android:src="@drawable/frame" />
        <TextView
            android:layout_below="@id/iv_qr_scan_activity_scan_area"
            android:layout_marginTop="58dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#fefefe"
            android:gravity="center_horizontal"
            android:text="컴퓨터에서 웹으로 로그인을 시도하는 경우 QR코드를 스캔해 주세요."
            />


    </RelativeLayout>

</LinearLayout>